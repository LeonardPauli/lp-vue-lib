@import 'fonts'

*
	padding 0px
	margin 0px
	
html, body
	size 100%
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	font-regular()
	color $text-1

body
	background-color $base-bg
	
a, a:visited
	text-decoration none
	noselect()
	
// Grid system
.uses-grid
	& > .row
		margin-bottom 12px
		width 100%
		$spacing = 12px
		& > div
			&.spacer
				display inline-block
			width 100%
			margin-right $spacing
			&:last-child
				margin-right 0px
		for n in (1..12)
			&.cw{n} > div
				$tot_spacing = $spacing * (n - 1)
				$c_w_str = "(100% - %s) / %s" % ($tot_spacing n)
				width "calc( %s )" % $c_w_str
				if n>1
					for m in (2..n)
						&.w{m}
							$included_spacing = (m - 1) * $spacing
							width "calc( %s * %s + %s )" % ($c_w_str m $included_spacing)
	&.card
		background-color hsla(0,0%,100%,0.2)
		padding 12px
		margin 5px -12px
		margin-bottom 16px
		padding-bottom 1px
		border-radius 4px
		box-shadow 0px 0.5px 6px rgba(0,0,0,0.04), 0px 1px 1px rgba(0,0,0,0.05)