{
	"name": "base",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"lint:watch": "onchange '{{src}/**,.}/*.{vue,js}' -d 200 -w -- npm run --silent lint {{changed}}",
		"lint:compile": "echo \"require('fs').writeFileSync('.eslintrc', JSON.stringify(require('./.eslintrc.js')), 'utf-8')\" | node",
		"dev": "npm --prefer-offline --no-optional i && ./node_modules/.bin/vue-cli-service serve",
		"serve": "vue-cli-service serve --open",
		"build": "vue-cli-service build",
		"test": "vue-cli-service test",
		"e2e": "vue-cli-service e2e",
		"lint": "vue-cli-service lint",
		"e2e:open": "vue-cli-service e2e:open"
	},
	"dependencies": {
		"register-service-worker": "^1.0.0",
		"vue": "^2.5.16",
		"vue-router": "^3.0.1"
	},
	"optionalDependencies": {
		"@vue/cli-plugin-e2e-cypress": "^3.0.0-beta.9"
	},
	"devDependencies": {
		"@babel/plugin-proposal-decorators": "^7.0.0-beta.46",
		"@babel/plugin-proposal-function-bind": "^7.0.0-beta.46",
		"@babel/plugin-proposal-pipeline-operator": "^7.0.0-beta.46",
		"@vue/cli-plugin-babel": "^3.0.0-beta.9",
		"@vue/cli-plugin-eslint": "^3.0.0-beta.9",
		"@vue/cli-plugin-pwa": "^3.0.0-beta.9",
		"@vue/cli-plugin-unit-jest": "^3.0.0-beta.9",
		"@vue/cli-service": "^3.0.0-beta.9",
		"@vue/eslint-config-standard": "^3.0.0-beta.9",
		"@vue/test-utils": "^1.0.0-beta.10",
		"babel-core": "^7.0.0-0",
		"babel-jest": "^22.0.4",
		"lint-staged": "^6.0.0",
		"onchange": "^3.3.0",
		"pug": "^2.0.0-rc.4",
		"pug-loader": "^2.4.0",
		"stylus": "^0.54.5",
		"stylus-loader": "^3.0.1",
		"vue-template-compiler": "^2.5.13"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not ie <= 8"
	],
	"gitHooks": {
		"pre-commit": "lint-staged"
	},
	"lint-staged": {
		"*.js": [
			"vue-cli-service lint",
			"git add"
		],
		"*.vue": [
			"vue-cli-service lint",
			"git add"
		]
	}
}
